@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    int totalRow = 0;
}

<div class="text-center">
    <h3 class="text-center">Product</h3>
    
    <button onclick="return AddRow(@totalRow)" class="my-3 float-start btn btn-success">Add Row</button>


    <table class="table">
       <thead class="thead-dark">
        <tr>
            <th scope="col">No</th>
            <th scope="col">Description</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>

        <tbody>
           @{
               for(int i = 1; i <= totalRow; i++)
               {
                                <tr>
                                    <td>@i</td>
                                    <td></td>
                                    <td></td>
                                </tr>
               }
           }
        </tbody>

    </table>

</div>

<script>
    function AddRow(totalRow) {
        return totalRow+1;
    }
</script>